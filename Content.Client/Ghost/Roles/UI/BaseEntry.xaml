<BoxContainer xmlns="https://spacestation14.io"
              Orientation="Vertical"
              HorizontalExpand="True"
              Margin="0 0 8 8">
    <Label Name="Title"
           StyleClasses="LabelKeyText"/>
    <PanelContainer StyleClasses="HighDivider"></PanelContainer>
    <RichTextLabel Name="Description"
                   Margin="0 4"/>
    <BoxContainer HorizontalAlignment="Left"
                  Orientation="Horizontal"
                  SeparationOverride="5">
        <Button Name="TakeButton" Text="{Loc 'ghost-roles-window-take-role-button'}"/>
        <Button Name="RequestButton" Text="{Loc 'ghost-roles-window-request-role-button'}"/>
        <Button Name="CancelButton" Text="{Loc 'ghost-roles-window-cancel-role-button'}" StyleClasses="Caution"/>
        <Button Name="FollowButton" Text="{Loc 'ghost-roles-window-follow-role-button'}"/>
    </BoxContainer>
</BoxContainer>
