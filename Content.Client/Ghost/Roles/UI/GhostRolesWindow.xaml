<DefaultWindow xmlns="https://spacestation14.io"
            Title="{Loc 'ghost-roles-window-title'}"
            MinSize="375 360">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" HorizontalAlignment="Right" Name="AdminControls" Margin="0 8">
            <Button Name="OpenGhostRoleGroupsButton" Text="{Loc 'ghost-roles-window-manage-role-groups-button'}" HorizontalAlignment="Right"/>
        </BoxContainer>
        <Label Name="NoRolesMessage"
               Text="{Loc 'ghost-roles-window-no-roles-available-label'}"
               VerticalAlignment="Top" />
        <ScrollContainer VerticalExpand="True"
                         HScrollEnabled="False">
            <BoxContainer Orientation="Vertical"
                          Name="EntryContainer"
                          VerticalExpand="True">
                <!-- Ghost role entries are added here by code -->
            </BoxContainer>
        </ScrollContainer>
        <BoxContainer Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0 3">
            <Label Text="&#x231B;" Margin="10 0" VerticalAlignment="Center"/>
            <ProgressBar Name="TimeRemainingProgress" VerticalAlignment="Center" HorizontalExpand="True" MaxHeight="10"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
