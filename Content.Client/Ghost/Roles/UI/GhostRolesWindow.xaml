<DefaultWindow xmlns="https://spacestation14.io"
            Title="{Loc 'ghost-roles-window-title'}"
            MinSize="375 275">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <Label Name="NoRolesMessage"
               Text="{Loc 'ghost-roles-window-no-roles-available-label'}"
               VerticalAlignment="Top" />
        <ScrollContainer VerticalExpand="True"
                         HScrollEnabled="False">
            <BoxContainer Orientation="Vertical"
                          Name="EntryContainer"
                          VerticalExpand="True">
                <!-- Ghost role entries are added here by code -->
            </BoxContainer>
        </ScrollContainer>
        <ProgressBar Name="TimeRemainingProgress" Margin="0 3" MaxHeight="10" VerticalAlignment="Bottom"/>
    </BoxContainer>
</DefaultWindow>
