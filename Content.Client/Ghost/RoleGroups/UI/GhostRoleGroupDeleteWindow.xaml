<DefaultWindow Title="{Loc 'ghost-role-groups-delete-window-title'}"
               xmlns="https://spacestation14.io">
    <BoxContainer Orientation="Vertical" SeparationOverride="5">
        <Label Text="{Loc 'ghost-role-groups-delete-window-delete-group-entities-label'}"/>
        <BoxContainer Orientation="Horizontal">
            <Label Name="DeleteEntitiesLabel" Text="{Loc 'ghost-role-groups-delete-window-confirm-delete-group-entities-label'}"/>
            <CheckBox Name="DeleteEntitiesCheckbox" Margin="5 0"/>
        </BoxContainer>
        <Button Name="DeleteButton" HorizontalAlignment="Right" StyleClasses="Caution" Text="{Loc 'ghost-role-groups-window-delete-button'}"></Button>
    </BoxContainer>
</DefaultWindow>
