<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'ghost-role-groups-window-title'}"
               MinSize="432 275">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <Label Name="NoRoleGroupsMessage"
               Text="{Loc 'ghost-role-groups-window-no-role-groups-label'}"
               VerticalAlignment="Top"/>
        <ScrollContainer VerticalExpand="True" HScrollEnabled="False">
            <BoxContainer Orientation="Vertical" Name="EntryContainer" VerticalExpand="True">
                <!-- Ghost role group entries are added here by code -->
            </BoxContainer>
        </ScrollContainer>
        <BoxContainer Orientation="Horizontal" HorizontalExpand="False" VerticalAlignment="Bottom">
            <Button Name="StartGroupButton" Text="{Loc 'ghost-role-groups-window-start-group-button'}"></Button>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
