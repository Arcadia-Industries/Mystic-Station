<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                Title="Network Configurator" MinSize="220 400">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <Control VerticalExpand="True">
                <PanelContainer StyleClasses="PanelBackgroundBaseDark" />
                <BoxContainer Orientation="Vertical" Name="DeviceList" VerticalExpand="True" SeparationOverride="4" />
            </Control>
        </ScrollContainer>
        <BoxContainer Orientation="Horizontal" Margin="8 8 8 8">
            <Label Name="DeviceCountLabel" Margin="16 0 0 0" MaxWidth="64" />
            <Control HorizontalExpand="True" />
            <Button Name="ClearButton" Access="Public" Text="{Loc 'network-configurator-ui-clear-button'}" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
