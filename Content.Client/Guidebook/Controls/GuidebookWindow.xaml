<controls:FancyWindow xmlns:ui="clr-namespace:Content.Client.UserInterface"
                xmlns="https://spacestation14.io"
                xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                SetSize="750 700"
                MinSize="100 200"
                Resizable="True"
                Title="{Loc 'guidebook-window-title'}">
    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
        <!-- Guide select -->
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SizeFlagsStretchRatio="1">
            <Tree Name="Tree" VerticalExpand="True" HorizontalExpand="True"/>
            <cc:VSeparator StyleClasses="LowDivider" Margin="0 -2"/>
        </BoxContainer>
        <ScrollContainer Name="Scroll" HScrollEnabled="False" HorizontalExpand="True" VerticalExpand="True" SizeFlagsStretchRatio="2">
            <Control>
                <BoxContainer Orientation="Vertical" Name="EntryContainer" Margin="5 5 5 5"/>
                <BoxContainer Orientation="Vertical" Name="Placeholder" Margin="5 5 5 5">
                    <Label HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Loc 'guidebook-placeholder-text'}"/>
                    <Label HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Loc 'guidebook-placeholder-text-2'}"/>
                </BoxContainer>
            </Control>
        </ScrollContainer>
    </BoxContainer>
</controls:FancyWindow>
