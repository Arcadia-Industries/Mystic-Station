<DefaultWindow xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">

    <PanelContainer Name="PaperBackground" StyleClasses="PaperDefaultBorder" VerticalExpand="True" HorizontalExpand="True">
        <BoxContainer Name="PaperContentContainer" Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True">
            <TextureButton Name="ImageHeader" HorizontalAlignment="Center" />
            <PanelContainer Name="PaperContent" VerticalExpand="True" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" VerticalAlignment="Top">
                    <Control VerticalAlignment="Top" HorizontalAlignment="Center" VerticalExpand="True">
                        <Label Name="BlankPaperIndicator" StyleClasses="LabelSecondaryColor"
                            Text="{Loc 'paper-ui-blank-page-message'}"
                            VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    </Control>

                    <RichTextLabel StyleClasses="PaperWrittenText" Name="Label" MinSize="250 350" MaxSize="315 600"/>
                    <PanelContainer Name="InputContainer" StyleClasses="TransparentBorderedWindowPanel">
                        <LineEdit Name="Input" StyleClasses="PaperLineEdit" Access="Public" />
                    </PanelContainer>
                </BoxContainer>
                <BoxContainer Name="StampDisplay" Orientation="Vertical" VerticalAlignment="Bottom" Margin="6"/>
            </PanelContainer>
        </BoxContainer>
    </PanelContainer>
</DefaultWindow>
