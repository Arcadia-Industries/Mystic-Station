<DefaultWindow xmlns="https://spacestation14.io"
    Name="APCMenu" Title="{Loc 'apc-menu-title'}" Resizable="False">
    <BoxContainer Orientation="Vertical" SeparationOverride="4">
        <Button Name="BreakerButton" Text="{Loc 'apc-menu-breaker-button'}" HorizontalExpand="True" />

        <Button Disabled="True">
            <BoxContainer Orientation="Vertical">
                <Label Name="PowerLabel" HorizontalAlignment="Center" />
                <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Text="{Loc 'apc-menu-external-label'}" HorizontalAlignment="Left" />
                    <Label Name="ExternalPowerStateLabel" Text="{Loc 'apc-menu-power-state-good'}" HorizontalAlignment="Right" />
                </BoxContainer>
            </BoxContainer>
        </Button>

        <Button Disabled="True">
            <BoxContainer Orientation="Vertical">
                <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Text="{Loc 'apc-menu-charge-label'}" HorizontalAlignment="Left" />
                    <Label Name="ChargePercentage" HorizontalAlignment="Right" />
                </BoxContainer>

                <Control MinSize="5 5" />

                <ProgressBar Name="ChargeBar" HorizontalExpand="True" MinValue="0" MaxValue="1" Value="0.5" Page="0" />

                <Control MinSize="5 5" />
            </BoxContainer>
        </Button>
    </BoxContainer>
</DefaultWindow>
