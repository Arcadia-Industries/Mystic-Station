<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:ui="clr-namespace:Content.Client.HUD.UI"
               Title="{Loc 'crew-manifest-window-title'}">
    <BoxContainer Orientation="Vertical">
        <ui:StripeBack>
            <PanelContainer>
                <Label Name="StationName" Align="Center" />
            </PanelContainer>
        </ui:StripeBack>
        <BoxContainer>
            <ScrollContainer>
                <!-- this MIGHT have race conditions -->
                <BoxContainer Name="CrewManifestListing" >
                    <Label Text="{Loc 'crew-manifest-no-valid-station'}" />
                </BoxContainer>
                <!-- Crew manifest goes here. -->
            </ScrollContainer>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
