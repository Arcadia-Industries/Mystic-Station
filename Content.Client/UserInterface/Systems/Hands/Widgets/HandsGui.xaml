<widgets:HandsGui
    xmlns="https://spacestation14.io"
    xmlns:inventory="clr-namespace:Content.Client.UserInterface.Systems.Inventory.Controls"
    xmlns:widgets="clr-namespace:Content.Client.UserInterface.Systems.Hands.Widgets"
    xmlns:hands="clr-namespace:Content.Client.UserInterface.Systems.Hands.Controls"
    Name="HandsInterface"
    VerticalExpand="False"
    VerticalAlignment="Bottom"
    Orientation="Horizontal"
    HorizontalAlignment="Center">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <inventory:ItemSlotButtonContainer SlotGroup="SecondHotbar" />
            <hands:HandsContainer
                Name="HandContainer"
                Access="Protected"
                ColumnLimit="6" />
            <inventory:ItemSlotButtonContainer SlotGroup="MainHotbar" />
        </BoxContainer>
    </BoxContainer>
</widgets:HandsGui>
