<controls:TreeItem xmlns="https://spacestation14.io"
                   xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">
    <BoxContainer Orientation="Vertical">
        <ContainerButton Name="Button" Access="Public">
            <BoxContainer Orientation="Horizontal">
                <Control Margin="2 0 2 0" Name="IconBox" Access="Public">
                    <TextureRect Name="Icon" Access="Public" HorizontalAlignment="Center" VerticalAlignment="Center" Visible="False"/>
                </Control>
                <Label Name="Label" Access="Public"/>
            </BoxContainer>
        </ContainerButton>
        <BoxContainer Name="Body" Access="Public" Orientation="Vertical" Visible="False"/>
    </BoxContainer>
</controls:TreeItem>
