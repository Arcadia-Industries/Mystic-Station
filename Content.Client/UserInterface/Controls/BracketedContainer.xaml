<controls:BracketedContainer xmlns="https://spacestation14.io"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">

    <BoxContainer
        Orientation="Horizontal"
        HorizontalExpand="True"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <PanelContainer StyleClasses="BracketedContainerBegin" VerticalExpand="True" VerticalAlignment="Stretch" MinSize="10 10"/>

        <BoxContainer Orientation="Vertical" HorizontalExpand="True">
            <Control Access="Public" Name="ContentsContainer" HorizontalExpand="True" VerticalExpand="True" />
        </BoxContainer>

        <PanelContainer StyleClasses="BracketedContainerEnd" VerticalExpand="True" VerticalAlignment="Stretch" MinSize="10 10"/>
    </BoxContainer>
</controls:BracketedContainer>
