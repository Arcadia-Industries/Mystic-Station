<controls:BracketedContainer xmlns="https://spacestation14.io"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">

    <BoxContainer Orientation="Horizontal" VerticalAlignment="Center">
        <!-- Surely there is a way to add a texture to container? -->
        <TextureButton StyleClasses="BracketedContainerBegin" VerticalExpand="True"/>

        <BoxContainer Orientation="Vertical">
            <Control Access="Public" Name="ContentsContainer" HorizontalExpand="True" VerticalExpand="True" />
        </BoxContainer>

        <!-- Can't figure out how to apply a negative scale to an image, so just made a flipped version -->
        <TextureButton StyleClasses="BracketedContainerEnd" VerticalExpand="True" />
    </BoxContainer>
</controls:BracketedContainer>
