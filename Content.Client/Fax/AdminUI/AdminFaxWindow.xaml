<DefaultWindow xmlns="https://spacestation14.io"
               Title="Admin Fax Manager"
               MinWidth="400">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Label Text="Fax:" />
            <Control MinWidth="4" />
            <OptionButton Name="FaxSelector" HorizontalExpand="True" />
            <Control MinWidth="4" />
            <Button Name="FollowButton"
                    Text="Follow" />
        </BoxContainer>
        <Control MinHeight="5" />
        <BoxContainer Orientation="Vertical" HorizontalExpand="True">
            <Label Text="From:" />
            <LineEdit Name="FromEdit"></LineEdit>
        </BoxContainer>
        <Control MinHeight="5" />
        <BoxContainer Orientation="Vertical" HorizontalExpand="True">
            <Label Text="Message:" />
            <TextEdit Name="MessageEdit" MinSize="200 200"></TextEdit>
        </BoxContainer>
        <Control MinHeight="10" />
        <Button Name="SendButton" Text="Send"></Button>
    </BoxContainer>
</DefaultWindow>
