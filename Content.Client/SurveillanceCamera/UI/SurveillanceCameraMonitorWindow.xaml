<DefaultWindow xmlns="https://spacestation14.io"
               MinSize="200 500">
    <BoxContainer Orientation="Horizontal">
        <BoxContainer Orientation="Vertical" MaxWidth="200" VerticalExpand="True">
            <!-- lazy -->
            <OptionButton Name="SubnetSelector" />
            <Button Name="SubnetRefreshButton" Text="Refresh subnets" />
            <ScrollContainer VerticalExpand="True">
                <BoxContainer Name="SubnetList" Orientation="Vertical" />
            </ScrollContainer>
            <Button Name="CameraRefreshButton" Text="Refresh cameras" />
        </BoxContainer>
        <BoxContainer VerticalExpand="True" HorizontalExpand="True" Margin="5 5 5 5" Name="CameraViewBox" />
    </BoxContainer>
</DefaultWindow>
