<Control xmlns="https://spacestation14.io">
    <BoxContainer Margin="8,8,8,8" Orientation="Horizontal">
        <Button Name="Button">
            <TextureRect
                Name="RecipeTexture"
                Margin="0,0,4,0"
                MinSize="48 48"
                Stretch="KeepAspectCentered" />
            <Label Name="RecipeName" HorizontalExpand="True" />
            <Tooltip Name="RecipeTooltip" TooltipDelay="0.5"></Tooltip>
        </Button>
    </BoxContainer>
</Control>
