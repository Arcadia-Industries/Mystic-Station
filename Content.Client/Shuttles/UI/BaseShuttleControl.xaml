<controls:BoxContainer Visible="False"
               HorizontalExpand="True"
               xmlns:controls="https://spacestation14.io"
               xmlns:controls1="clr-namespace:Content.Client.UserInterface.Controls"
               xmlns:ui="clr-namespace:Content.Client.Shuttles.UI">
    <ui:DockingControl Name="DockingControl"
                       Visible="False"
                       MouseFilter="Stop"
                       Margin="5 4 10 5"
                       HorizontalExpand="True"
                       VerticalExpand="True"
                       VerticalAlignment="Top"/>
    <!-- Buffer -->
    <controls:Control HorizontalExpand="True"/>
    <controls:BoxContainer Name="RightDisplayDock"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Right"
                  MinWidth="256"
                  MaxWidth="256"
                  Align="Center"
                  Margin="5 0 5 5"
                  Orientation="Vertical">
        <controls:BoxContainer Orientation="Vertical">
            <controls1:StripeBack MinSize="48 48">
                <controls:Label Name="DockingPortsLabel" Text="{controls:Loc 'shuttle-console-dock-label'}" HorizontalAlignment="Center"/>
            </controls1:StripeBack>
            <controls:BoxContainer Name="DockPorts"
                          Orientation="Vertical"/>
        </controls:BoxContainer>
    </controls:BoxContainer>
</controls:BoxContainer>
