<Control xmlns="https://spacestation14.io">
    <VBoxContainer Orientation="Vertical">
        <HBoxContainer>
            <Label Name="PlayerCount" HorizontalExpand="True" SizeFlagsStretchRatio="0.7"
                   Text="{Loc Player Count}" />
            <Button Name="RefreshButton" HorizontalExpand="True" SizeFlagsStretchRatio="0.3"
                    Text="{Loc Refresh}" />
        </HBoxContainer>
        <Control MinSize="0 5" />
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <VBoxContainer Orientation="Vertical" Name="PlayerList" />
        </ScrollContainer>
    </VBoxContainer>
</Control>
