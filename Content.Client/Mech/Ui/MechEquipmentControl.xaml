<Control xmlns="https://spacestation14.io">
    <Button Disabled="True" Margin="0 0 0 0" HorizontalExpand="True" SetHeight="80">
    <BoxContainer HorizontalExpand="True" VerticalExpand="True" Orientation="Horizontal">
        <SpriteView
            Name="EquipmentView"
            OverrideDirection="South"
            MinSize="48 48"
            SetSize="48 48"
            Scale="1.5 1.5"
            RectClipContent="True"/>
        <RichTextLabel Name="EquipmentName" VerticalAlignment="Center"/>
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Name="EnableButton" Text="{Loc 'mech-equipment-control-enable'}" SetHeight="30" HorizontalExpand="True" ToggleMode="True"></Button>
            <BoxContainer MinHeight="5"></BoxContainer>
            <Button Name="RemoveButton" Text="{Loc 'mech-equipment-control-remove'}" SetHeight="30" HorizontalExpand="True"></Button>
        </BoxContainer>
    </BoxContainer>
    </Button>
</Control>
