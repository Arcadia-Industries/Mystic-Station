<BoxContainer xmlns="https://spacestation14.io"
              Orientation="Vertical">
    <!-- "Slot" selection -->
    <BoxContainer Name="SlotSelectorContainer">
        <OptionButton Name="SlotSelector" HorizontalExpand="True" />
        <Button Name="AddButton" />
        <Button Name="RemoveButton" />
    </BoxContainer>
    <!-- Item list -->
    <BoxContainer Name="MarkingSelectorContainer" Orientation="Vertical">
        <ScrollContainer VerticalExpand="True">
            <ItemList Name="MarkingList" />
        </ScrollContainer>
        <!-- Color sliders -->
        <ScrollContainer MinHeight="300">
            <BoxContainer Name="ColorSelectorContainer" />
        </ScrollContainer>
    </BoxContainer>
</BoxContainer>
