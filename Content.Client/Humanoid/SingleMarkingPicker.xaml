<BoxContainer xmlns="https://spacestation14.io"
              Orientation="Vertical"
              HorizontalExpand="True"
              VerticalExpand="True">
    <!-- "Slot" selection -->
    <BoxContainer Name="SlotSelectorContainer" VerticalExpand="True" HorizontalExpand="True">
        <OptionButton Name="SlotSelector" HorizontalExpand="True" />
        <Button Name="AddButton" />
        <Button Name="RemoveButton" />
    </BoxContainer>
    <!-- Item list -->
    <BoxContainer Name="MarkingSelectorContainer" Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
        <ScrollContainer MinHeight="300" VerticalExpand="True" HorizontalExpand="True">
            <ItemList Name="MarkingList" VerticalExpand="True" />
        </ScrollContainer>
        <!-- Color sliders -->
        <ScrollContainer MinHeight="50" HorizontalExpand="True">
            <BoxContainer Name="ColorSelectorContainer" />
        </ScrollContainer>
    </BoxContainer>
</BoxContainer>
