<BoxContainer xmlns="https://spacestation14.io"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Orientation="Vertical">
    <!-- Upper row: Danger bounds -->
    <BoxContainer Name="CDangerBounds" Orientation="Horizontal" />
    <!-- Lower row: Warning bounds -->
    <BoxContainer Name="CWarningBounds" Orientation="Horizontal" />
    <!-- Lowest row: Enabled/Ignore box -->
    <BoxContainer Orientation="Horizontal">
        <CheckBox Name="CIgnore" Text="{Loc 'Ignore'}" />
    </BoxContainer>
</BoxContainer>
