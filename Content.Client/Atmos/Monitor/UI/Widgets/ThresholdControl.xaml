<BoxContainer xmlns="https://spacestation14.io"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Orientation="Vertical" Margin="0 2 4 2">
    <!-- Upper row: Danger bounds -->
    <BoxContainer Name="CDangerBounds" Orientation="Horizontal" Margin="0 0 2 0"/>
    <!-- Lower row: Warning bounds -->
    <BoxContainer Name="CWarningBounds" Orientation="Horizontal" Margin="0 0 2 0"/>
    <!-- Lowest row: Enabled/Ignore box -->
    <BoxContainer Orientation="Horizontal">
        <CheckBox Name="CIgnore" Text="{Loc 'Ignore'}" />
    </BoxContainer>
</BoxContainer>
