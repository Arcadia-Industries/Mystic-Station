<cc:SS14Window Title="Make Ghost Role"
               xmlns:cc="clr-namespace:Robust.Client.UserInterface.CustomControls;assembly=Robust.Client"
               xmlns:c="clr-namespace:Robust.Client.UserInterface.Controls;assembly=Robust.Client">

    <c:VBoxContainer>
        <c:HBoxContainer>
            <c:Label Name="RoleEntityLabel" Text="Entity"></c:Label>
            <c:Label Name="RoleEntity" Text=""></c:Label>
        </c:HBoxContainer>
        <c:HBoxContainer>
            <c:Label Name="RoleNameLabel" Text="Role Name"></c:Label>
            <c:LineEdit Name="RoleName" SizeFlagsHorizontal="FillExpand"/>
        </c:HBoxContainer>
        <c:HBoxContainer>
            <c:Label Name="RoleDescriptionLabel" Text="Role Description"></c:Label>
            <c:LineEdit Name="RoleDescription" SizeFlagsHorizontal="FillExpand"/>
        </c:HBoxContainer>
        <c:HBoxContainer>
            <c:Button Name="MakeButton" Text="Make"></c:Button>
        </c:HBoxContainer>
    </c:VBoxContainer>

</cc:SS14Window>
