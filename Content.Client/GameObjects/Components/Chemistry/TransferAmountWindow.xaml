<SS14Window xmlns="https://spacestation14.io"
            Title="{Loc 'ui-transfer-amount-title'}"
            Resizable="False">

    <VBoxContainer SeparationOverride="4" CustomMinimumSize="150 160">
        <HBoxContainer>
            <LineEdit Name="AmountLineEdit" PlaceHolder="{Loc 'ui-transfer-amount-line-edit-placeholder'}"></LineEdit>
            <Slider Name="AmountSlider" HorizontalExpand="True"/>
        </HBoxContainer>
        <Button Name="ApplyButton" Text="{Loc 'ui-transfer-amount-apply'}" />
    </VBoxContainer>
</SS14Window>
