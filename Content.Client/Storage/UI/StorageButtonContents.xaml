<BoxContainer
    xmlns="https://spacestation14.io"
    Orientation="Horizontal"
    SeparationOverride="2">
    <SpriteView
        Name="EntityView"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        MinSize="32 32"
        OverrideDirection="South"/>
    <Label Name="EntityName" HorizontalExpand="True" ClipText="True"/>
    <TextureRect
        Name="Icon"
        HorizontalAlignment="Right"
        Visible="False"
        Stretch="KeepAspectCentered"
        SetSize="30 30"
        StyleClasses="storageWeightIcon">
        <Label Name="EntitySize" Align="Center" Margin="0 4 0 0"/>
    </TextureRect>
</BoxContainer>
