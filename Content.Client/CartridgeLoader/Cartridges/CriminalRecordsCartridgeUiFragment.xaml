<cartridges:CriminalRecordsCartridgeUiFragment xmlns:cartridges="clr-namespace:Content.Client.CartridgeLoader.Cartridges"
                                 xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                                 xmlns="https://spacestation14.io" Margin="1 0 2 0">
    <PanelContainer StyleClasses="BackgroundDark"></PanelContainer>
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
      <controls:StripeBack>
        <PanelContainer>
          <Label Align="Center" Text="{Loc 'criminal-records-wanted-heading'}"/>
        </PanelContainer>
      </controls:StripeBack>
      <ScrollContainer HorizontalExpand="True" VerticalExpand="True" >
        <GridContainer Margin="10 0 0 0" HorizontalExpand="True" Columns="2" Name="Wanted"/>
      </ScrollContainer>
      <controls:StripeBack>
        <PanelContainer>
          <Label Align="Center" Text="{Loc 'criminal-records-detained-heading'}"/>
        </PanelContainer>
      </controls:StripeBack>
      <ScrollContainer HorizontalExpand="True" VerticalExpand="True" >
        <GridContainer Margin="10 0 0 0" HorizontalExpand="True" Columns="2" Name="Detained"/>
      </ScrollContainer>
    </BoxContainer>
</cartridges:CriminalRecordsCartridgeUiFragment>
